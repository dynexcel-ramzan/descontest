<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
		<record id="locationwise_report_form_view" model="ir.ui.view">
			<field name="name">locationwise.report.form.view</field>
			<field name="model">overtime.location.wizard</field>
			<field name="arch" type="xml">
				<form string="Bank Letters">
                    <group>
                        <group>
                            <field name="date_form"/>
                            <field name="location_ids" widget="many2many_tags" required='1'/>
                        </group>
                        <group>
                            <field name="date_to"/>
                            <field name="department_ids" widget="many2many_tags"/>

                        </group>
                    </group>
					<footer>
						<button name="print_report" type="object" string="Print" class="oe_highlight" />
                     </footer>
				</form>

            </field>
        </record>
    </data>


		<record id="locationwise_report_pdf" model="ir.actions.act_window">
			<field name="name">locationwise report pdf</field>
			<field name="res_model">overtime.location.wizard</field>
			<field name="view_id" ref="locationwise_report_form_view"/>
			<field name="target">new</field>
		</record>

		<menuitem action="locationwise_report_pdf" id="locationwise_report" name="LocationWise Overtime Report " parent="hr_payroll.menu_hr_payroll_report" sequence="1"/>

</odoo>
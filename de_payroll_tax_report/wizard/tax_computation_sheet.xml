<?xml version="1.0" encoding="utf-8"?>
<odoo> 
        <!--Display form view of wizard-->    
        <record id="view_computation_tax_register_wizard_form" model="ir.ui.view">
            <field name="name">computation.tax.register.wizard.form</field>
            <field name="model">computation.tax.register.wizard</field>
            <field name="arch" type="xml">
                <form string="Computation tax register wizard">
                    <group>
                      <group>
                          <field name="employee_id"/>
                      </group>
                      <group>
                          <field name="date_from" />
                        <field name="date_to"/>
                          <field name="bank_name" />
                          <field name="branch_address" />
                      </group>
                        
                    </group>
                    <footer>
                        <button string='Print' name="check_report" type="object" default_focus="1" class="oe_highlight"/>
                        <button string="Cancel" class="btn-default" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <!--Open the wizard on click of menu-->
        <record id="open_computation_tax_register_action" model="ir.actions.act_window">
            <field name="name">Computation Tax Certificate</field>
            <field name="res_model">computation.tax.register.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
            <field name="view_id" ref="view_computation_tax_register_wizard_form"/>
        </record>
    
    
     <menuitem action="open_computation_tax_register_action" id="new_computation_tax_report"     parent="hr_payroll.menu_hr_payroll_report" sequence="3"/>


</odoo>

<?xml version="1.0" encoding="utf-8"?>
<odoo> 
        <!--Display form view of wizard-->    
        <record id="view_purchase_tax_register_wizard_form" model="ir.ui.view">
            <field name="name">purchase.tax.register.wizard.form</field>
            <field name="model">purchase.tax.register.wizard</field>
            <field name="arch" type="xml">
                <form string="Purchase Tax Register">
                    <group>
                      <group>
                          <field name="name"/>
                      </group>
                      <group>
                          <field name="date_from" />
                        <field name="date_to"/>
                          <field name="bank_name" />
                          <field name="branch_address" />
                      </group>
                        
                    </group>
                    <footer>
                        <button string='Print' name="check_report" type="object" default_focus="1" class="oe_highlight"/>
                        <button string="Cancel" class="btn-default" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <!--Open the wizard on click of menu-->
        <record id="open_purchase_tax_register_action" model="ir.actions.act_window">
            <field name="name">Tax Certificate</field>
            <field name="res_model">purchase.tax.register.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
            <field name="view_id" ref="view_purchase_tax_register_wizard_form"/>
        </record>
    
    
     <menuitem action="open_purchase_tax_register_action" id="new_purchase_tax_report" parent="hr_payroll.menu_hr_payroll_report" sequence="2"/>


</odoo>


<odoo>
  <data>
           <!--Display form view of wizard-->    
        <record id="view_hr_overtime_wizard_form" model="ir.ui.view">
            <field name="name">hr.overtime.wizard.form</field>
            <field name="model">hr.overtime.wizard</field>
            <field name="arch" type="xml">
                <form string="Overtime Report">
                    <group>
                        
                       <group>
                            <field name="date_from" />
                            <field name="location_ids"  widget='many2many_tags'/>
                      </group>
                        
                      <group>
                        <field name="date_to" />
                        <field name="department_ids"  widget='many2many_tags'/>
                      </group>                        
                        
                    </group>
                    
                    <footer>
                        <button string='Print' name="check_report" type="object" default_focus="1" class="oe_highlight"/>
                        <button string="Cancel" class="btn-default" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <!--Open the wizard on click of menu-->
        <record id="open_hr_overtime_report_wizard_action" model="ir.actions.act_window">
            <field name="name">LocationWise Overtime Report</field>
            <field name="res_model">hr.overtime.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
            <field name="view_id" ref="view_hr_overtime_wizard_form"/>
        </record>
      
     
  </data>
</odoo>
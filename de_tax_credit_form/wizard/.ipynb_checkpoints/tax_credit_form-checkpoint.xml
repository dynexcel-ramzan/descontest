<?xml version="1.0" encoding="utf-8"?>
<odoo> 
        <!--Display form view of wizard-->    
        <record id="view_tax_credit_wizard_form" model="ir.ui.view">
            <field name="name">tax.credit.form</field>
            <field name="model">tax.credit</field>
            <field name="arch" type="xml">
                <form string="Tax Credit wizard">
                    <group>
                        
                      <group>
                          <field name="investment_amount"/>
                
                         <field name="credit_amount"/>
                      </group>
                        <group>
                          <field name="tax_company_id" readonly="1"/>
                           <field name="tax_period" readonly="1" />
                           <field name="empl_code" readonly="1" />
                      </group>
                        <footer>
 <button string='Calculate ' name="action_investment_amount" type="object" default_focus="1" class="oe_highlight"/>
                            
<!-- <button string='Calculate Tax Credit' name="total_tax_investment" type="object" default_focus="1" class="oe_highlight"/> -->
                    </footer>
                         <group>
                      </group>
                    </group>
                </form>
            </field>
        </record>

        <!--Open the wizard on click of menu-->
        <record id="open_computation_tax_register_action" model="ir.actions.act_window">
            <field name="name">Tax Credit</field>
            <field name="res_model">tax.credit</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
            <field name="view_id" ref="view_tax_credit_wizard_form"/>
        </record>
    
     
 <menuitem action="open_computation_tax_register_action" id="new_computation_tax_report"  sequence="3"/>
          

</odoo>

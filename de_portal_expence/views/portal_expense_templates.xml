                            obj.dependent=col2_value;
                            obj.reference=col3_value;
                            obj.unit_amount=col4_value;
                            expensesubmitdata.push(obj);

                       });
                     expensedictionary = JSON.stringify(expensesubmitdata); 
                     var lista = document.getElementById("expense_line_vals")
                     lista.value = expensedictionary 
                     console.log(expensesubmitdata);   
                     });
                   });

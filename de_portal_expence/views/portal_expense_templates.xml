                        $(document).ready(function(){
                        $("#expensesubmit").on('click',function(){
                       var expensesubmitdata=[];
                       // loop over each table row (tr)
                       $("#expenseTable tr").each(function(){
                            var currentRow=$(this);
                            var col1_value=currentRow.find("td:eq(0)").text();
                            var col2_value=currentRow.find("td:eq(2)").text();
                            var col3_value=currentRow.find("td:eq(1)").text();
                            var col4_value=currentRow.find("td:eq(3)").text();

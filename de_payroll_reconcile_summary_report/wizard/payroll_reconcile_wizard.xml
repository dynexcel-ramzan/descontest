<?xml version="1.0" encoding="utf-8"?>
<odoo> 
        <!--Display form view of wizard-->    
        <record id="view_payroll_reconcile_wizard_form" model="ir.ui.view">
            <field name="name">payroll.reconcile.wizard.form</field>
            <field name="model">payroll.reconcile.wizard</field>
            <field name="arch" type="xml">
                <form string="Payroll Reconcile Wizard">
                    <group>
                      <group>
                          <field name="company_id"/>
                      </group>
                      <group>
                          <field name="date_from" />
                        <field name="date_to"/>
                      </group>
                        
                    </group>
                    <footer>
                        <button string='Print' name="check_report" type="object" default_focus="1" class="oe_highlight"/>
                        <button string="Cancel" class="btn-default" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <!--Open the wizard on click of menu-->
        <record id="open_payroll_reconcile_wizard_action" model="ir.actions.act_window">
            <field name="name">Payroll Reconcile</field>
            <field name="res_model">payroll.reconcile.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
            <field name="view_id" ref="view_payroll_reconcile_wizard_form"/>
        </record>
    
    
     <menuitem action="open_payroll_reconcile_wizard_action" id="new_payroll_reconcile"             parent="hr_payroll.menu_hr_payroll_report" sequence="4"/>


</odoo>

<odoo>
  <data>
           <!--Display form view of wizard-->    
        <record id="view_hr_payroll_reconcile_form" model="ir.ui.view">
            <field name="name">hr.payroll.reconcile.wizard.form</field>
            <field name="model">payroll.reconcile.wizard</field>
            <field name="arch" type="xml">
                <form string="Overtime Report">
                    <group>
                        
                       <group>
                            <field name="date_from" />
                           <field name="company_id" widget='many2many_tags'/>
                            <field name="location_ids"  widget='many2many_tags'/>
                            <field name="department_ids"  widget='many2many_tags'/>
                      </group>
                        
                      <group>
                        <field name="date_to" />
                        <field name="cost_center_ids"  widget='many2many_tags'/>
                          <field name="employee_type" widget="selection"/>

                      </group>                        
                        
                    </group>
                    
                    <footer>
                        <button string='Print' name="check_report" type="object" default_focus="1" class="oe_highlight"/>
                        <button string="Cancel" class="btn-default" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <!--Open the wizard on click of menu-->
        <record id="open_payroll_reconcile_wizard_action" model="ir.actions.act_window">
            <field name="name">Payroll Reconcile Report</field>
            <field name="res_model">payroll.reconcile.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
            <field name="view_id" ref="view_hr_payroll_reconcile_form"/>
        </record>
      <menuitem action="open_payroll_reconcile_wizard_action" id="payroll_reconcile_report" name="Payroll Reconcile Report" parent="hr_payroll.menu_hr_payroll_report" sequence="1"/>
      
      
  </data>
</odoo>
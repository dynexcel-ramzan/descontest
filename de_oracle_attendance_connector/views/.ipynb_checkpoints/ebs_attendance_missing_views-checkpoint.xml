<odoo>
    <data> 
         <record id="hr_device_attendance_view_filter" model="ir.ui.view">
        <field name="name">hr_device_attendance_view_filter</field>
        <field name="model">hr.device.attendance</field>
        <field name="arch" type="xml">
            <search string="Hr Attendance device Search">
                <field name="device_id"/>
                <separator/>
                <filter string="Company" name="company_id" 
						help="Show Attendance Device" />
               
                <group expand="0" string="Group By">
                    <filter string="Company" name="company_id" context="{'group_by': 'company_id'}"/>
                    
                </group>
            </search>
        </field>
    </record>
        
      <record id="ebs_attendance_missing_view_form" model="ir.ui.view">
        <field name="name">ebs.attendance.missing.form</field>
        <field name="model">ebs.attendance.missing</field>
        <field name="arch" type="xml">
            <form string="Missing attendances" edit="0">
                <sheet>
                    <div class="oe_title pr-0">
                        <h1 class="d-flex flex-row justify-content-between">
                            <field name="work_location_id" class="o_task_name text-truncate" />
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="execution_time"/>
                        </group>
                        <group>
                            <field name="company_id"/>
                        </group>
                    </group>    
                </sheet>
            </form>
        </field>
    </record>   
      
     
      
    <record id="view_ebs_attendance_missing_tree" model="ir.ui.view">
        <field name="name">ebs.attendance.missing.tree</field>
        <field name="model">ebs.attendance.missing</field>
        <field name="arch" type="xml">
            <tree string="Missing attendances"  create="true"  edit="true">
                <field name="work_location_id"/>
                <field name="execution_time"  />
                 <field name="company_id"  />
            </tree>
        </field>
    </record>  
      
      
      
    <record id="hr_location_wise_attendance_action" model="ir.actions.act_window">
        <field name="name">Attendance Location</field>
        <field name="res_model">ebs.attendance.missing</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id"></field> 
        <field name="help" type="html">

            <p class="o_view_nocontent_smiling_face">
                No data yet!
            </p>
        </field>
    </record>

      
     

    <menuitem id="menu_hr_location_wise_attendance" name="Attendance Location" parent="menu_hr_user_attendance_my_attendances" sequence="8"  action="hr_location_wise_attendance_action"/>

  </data>
</odoo>
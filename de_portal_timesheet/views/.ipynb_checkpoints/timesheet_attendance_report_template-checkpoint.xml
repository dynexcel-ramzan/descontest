        <template id="portal_create_timesheet_report_lines" name="hr_timesheet_report">
         <t t-set="foo" t-value="2 + 1"/>
                 
        <t t-call="portal.portal_layout">
            <t t-set="breadcrumbs_searchbar" t-value="True"/>
            <t t-call="portal.portal_searchbar">
                <t t-set="title">Project Timesheet</t>
            </t>
            <t t-if="not emps">
                <div class="alert alert-warning mt8" role="alert">
                    You are not incharge of any employee.
                </div>
            </t>
            <script>
                  function validateForm() {
                      let datefroma = document.getElementById("date_from").value;
                      let datefromb = document.getElementById("datefromb").value;
                      let datetoa = document.getElementById("date_to").value;
                      let datetob = document.getElementById("datetob").value;
                      if (new Date(datefroma) > new Date(datetob)) {
                        alert("Not Allow to Enter date Greater than Project Date to. "+datetob);
                      }
                      if (new Date(datefromb) > new Date(datefroma)) {
                        alert("Not Allow to Enter date less than Project Date From. "+datefromb);
                      }
                      if (new Date(datetoa) > new Date(datetob)) {
                        alert("Not Allow to Enter date Greater than Project Date to. "+datetob);
                      }
                      if (new Date(datefromb) > new Date(datetoa)) {
                        alert("Not Allow to Enter date less than Project Date From. "+datefromb);
                      }
                      if (new Date(datefroma) > new Date(datetoa)) {
                        alert("Not Allow to Enter date less than Project Date From. "+datefroma);
                      }
                      if (new Date(datefroma) > new Date(datetoa)) {
                        document.getElementById("date_to").value= datetob;
                      } 
                      if (new Date(datefroma) > new Date(datetob)) {
                        document.getElementById("date_from").value= datefromb;
                      }
                      if (new Date(datefromb) > new Date(datefroma)) {
                       document.getElementById("date_from").value= datefromb;
                      }
                      if (new Date(datetoa) > new Date(datetob)) {
                        document.getElementById("date_to").value= datetob;
                      }
                      if (new Date(datefromb) > new Date(datetoa)) {
                        document.getElementById("date_to").value= datetob;
                      }
                    }
            </script> 
            <t t-if="emps">
                <form id="portal_timesheet_report_form_line" data-toggle="validator" action="/project/timesheet/line/save">
                <table class="table table-sm table-striped table-bordered"   id="datepanel">

                            <tr>
                                <th class="text-left">Client</th>
                                <td class="text-left"><span t-esc='partner.name' /></td>
                                <th class="text-left">Project</th>
                                <td class="text-left"><span t-esc='project.name'  /></td>
                            </tr>
                            <tr>
                                <th class="text-left">Date From</th>
                                <td class="text-left"><span t-esc='datefrom'  t-options='{"widget": "date"}' /></td>
                                <th class="text-left">Date To</th>
                                <td class="text-left"><span t-esc='dateto' t-options='{"widget": "date"}' /></td>
                            </tr>
                </table>
                <table class="table table-sm table-striped table-bordered"   id="timesheetTable">


                            <tr t-attf-class="{{'thead-light' if not groupby == 'none' else ''}}">
                                <th class="text-left">Employee</th>
                                <th class="text-left">Date From</th>
                                <th class="text-left">Date To</th>
                            </tr>

                            <t t-foreach="emps" t-as="emp">
                                <tr>
                                     <td class="employee">
                                       <input type="hidden" class="form-control s_website_form_input" name="employee_id" id="employee_id"   t-att-value="emp.id"/>
                                        <span t-esc="emp.name" />
                                    </td>
                                    <td class="date_from">
                                        <input  type="date" class="form-control s_website_form_input" name="date_from" id="date_from"    t-options='{"widget": "date"}' t-att-value="datefrom"  onchange="return validateForm()"/>
                                    </td>
                                    <td class="date_to">
                                        <input  type="date" class="form-control s_website_form_input" name="date_to" id="date_to"    t-options='{"widget": "date"}'  t-att-value="dateto" onchange="return validateForm()"/>
                                    </td>

                                </tr>

                            </t>

                  </table>

                    <input type="hidden" id="timesheet_attendance_vals" class="form-control s_website_form_input" name="timesheet_attendance_vals"  multiple="true" />
                       <input id='datefromb' type="hidden"  class="form-control s_website_form_input" name="docsdate_from" t-att-value="datefrom"  multiple="true" />
                        <input type="hidden" id="project_id" class="form-control s_website_form_input" name="project_id" t-att-value="project.id"  multiple="true" />
                        <input type="hidden" id="partner_id" class="form-control s_website_form_input" name="partner_id" t-att-value="partner.id"  multiple="true" />
                        <input id='datetob' type="hidden"  class="form-control s_website_form_input" name="docsdate_to" t-att-value="dateto"  multiple="true" />

                    <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
                    
                   <script src="/de_portal_timesheet/static/src/js/jquery_min.js"></script>
                      <script type="text/javascript">
                        $(document).ready(function(){
                        $("#timesheetreport").on('click',function(){
                           var timesheet_report=[];
                           // loop over each table row (tr)
                           $("#timesheetTable tr").each(function(){
                                var currentRow=$(this);

                                var col1_value=currentRow.find(".employee input").val();
                                var col2_value=currentRow.find(".date_from input").val();
                                var col3_value=currentRow.find(".date_to input").val();

                                var obj={};
                                obj.employee=col1_value;
                                obj.datefrom=col2_value;
                                obj.dateto=col3_value;

                                timesheet_report.push(obj);

                           });
                         timesheetdictionary = JSON.stringify(timesheet_report);
                         var lista = document.getElementById("timesheet_attendance_vals")
                         lista.value = timesheetdictionary
                         console.log(timesheet_report);
                         });

                       });
                      </script>

                     <div class="form-group col-12 s_website_form_submit" data-name="Submit Button">
                            <div style="width: 200px;" class="s_website_form_label"></div>
                            <button type="submit" id="timesheetreport" class="btn btn-primary pull-left">Submit</button>
                            <span id="s_website_form_result"></span>
                        </div>


                </form>

            </t>

            <br/>
            <br/>
        </t>
    </template>








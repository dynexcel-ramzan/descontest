<?xml version="1.0" encoding="utf-8"?>
<odoo> 
        <!--Display form view of wizard-->    
        <record id="view_employee_eobi_wizard_form" model="ir.ui.view">
            <field name="name">employee.eobi.wizard.form</field>
            <field name="model">employee.eobi.wizard</field>
            <field name="arch" type="xml">
                <form string="employee eobi wizard">
                    <group>
                      <group>
                          <field name="employee_id"/>
                      </group>
                      <group>
                          <field name="date_from" />
                        <field name="date_to"/>
                      </group>
                        
                    </group>
                    <footer>
                        <button string='Print' name="check_report" type="object" default_focus="1" class="oe_highlight"/>
                        <button string="Cancel" class="btn-default" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <!--Open the wizard on click of menu-->
        <record id="open_employee_eobi_register_action" model="ir.actions.act_window">
            <field name="name">Employee Eobi </field>
            <field name="res_model">employee.eobi.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
            <field name="view_id" ref="view_employee_eobi_wizard_form"/>
        </record>
    
    
     <menuitem action="open_employee_eobi_register_action" id="new_employee_eobi_action_report"             parent="hr_payroll.menu_hr_payroll_report" sequence="3"/>


</odoo>

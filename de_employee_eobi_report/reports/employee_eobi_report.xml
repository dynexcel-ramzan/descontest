<?xml version="1.0" encoding="utf-8" ?>

<odoo>
    

    <template id="report_eobi">
        <t t-call="web.external_layout">
            <t t-call="web.html_container" style="text-align: left">
                <t t-foreach="docs" t-as="doc">
                     
                    <br>
                        <center>
                            <div style="float:left; width: 110%">
                                <h3>Descon Oxychem Limited</h3>
                            </div>
                        </center>

                    </br>
                    <br>
                    <center>
                        <div style="float:left; width: 40%">
                            <h3>Employees Report</h3>
                        </div>
                    </center>
                    </br>
                    
                   

                     <br>
                        <table class="table">

                            <tr>
                                <th scope="col">Department: 
                                    <td>
                                        <span t-field="doc.department_id.name"/>
                                    </td>
                                </th>
                                
<!--                                 <th scope="col">Location: 
                                 <td>
                                    <span t-field="doc.work_location_id.name"/>
                                </td>
                                </th> -->
<!--                                 
                                <th scope="col">Staff Type: 
                                 <td>
                                        <span t-field="doc.grade_designation.name"/>
                                    </td>
                                </th> -->
                                
                            </tr>
                        </table>
                    </br>
 
                    <br>
                        <table class="table">
                            <tr>
<!--                                 <th scope="col">Section: 
                                <td>
                                        <span t-field="doc.section.name"/>
                                    </td>
                                </th>
                                
                                <th scope="col">Emp type: 
                                <td>
                                        <span t-field="dos.emp_type.name"/>
                                    </td>
                                </th> -->
                            </tr>
                        </table>
                    </br>
                </t>
                <table class="table">
                    <thead class="thead-light">
                        <tr>
                            <th scope="col">Department</th>
                            <th scope="col">Staff Type</th>
                            <th scope="col">Emp. Type</th>
                            <th scope="col">Office Emp Id </th>
                            <th scope="col">Name</th>
                            <th scope="col">Designation</th>
                            <th scope="col">Grade</th>
                            <th scope="col">Section</th>
                            <th scope="col">DOJ</th>
                        </tr>
                    </thead>
                    
                <tbody style="color:black">
                     <t t-foreach="employees" t-as="emp">
                    <tr>
                         <td><t t-esc="emp.name"/></td>
                         <td><t t-esc="emp.department_id.name"/></td>
                         <td><t t-esc="emp.name"/></td>
                         <td><t t-esc="emp.grade_designation.name"/></td>
                         <td><t t-esc="emp.grade_type.name"/></td>
                         <td><t t-esc="emp.section"/></td>
                     </tr>
                     </t>
                    </tbody>
                </table>
            </t>
        </t>
    </template>
</odoo>





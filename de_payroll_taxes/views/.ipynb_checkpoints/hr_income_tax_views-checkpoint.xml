<?xml version="1.0" ?>
<odoo>
    <data>
        <record id="view_hr_income_tax_form" model="ir.ui.view">
            <field name="name">hr.income.tax.form</field>
            <field name="model">hr.income.tax</field>
            <field name="arch" type="xml">
                <form string="Income" create='0' delete='0' edit='0'>
                    <sheet>
                       <group>
                        <group>
                              <field name="name" readonly='1'/>
                              <field name="employee_id" readonly='1'/>
                              <field name="date" readonly='1'/>
                        </group>
                        <group>
                             <label for="period" string="Period" />
                                <div class="d-flex" >
                                    <field name="period" force_save="1" />
                                    <span class="o_form_label mx-3 oe_edit_only" >  </span>
                                    <field name="tax_year" />
                                </div>
                             <field name="tax_amount" readonly='1'/>
                            <field name="company_id" readonly='1'/>
                        </group>
                       </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record model="ir.ui.view" id="view_hr_income_tax_tree">
            <field name="name">hr.income.tax.tree</field>
            <field name="model">hr.income.tax</field>
            <field name="arch" type="xml">
                <tree string="Income Tax" create='0' delete='0' edit='0'>
                    <field name="name"/>
                    <field name="employee_id"/>
                    <field name="period"/>
                    <field name="tax_year"/>
                    <field name="tax_amount"/>
                    <field name="company_id" readonly='1'/>
                    
                </tree>
            </field>
        </record>

        <record id="action_hr_income_tax" model="ir.actions.act_window">
            <field name="name">Income Tax</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">hr.income.tax</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[]</field>
            <field name="context">{}</field>
            <field name="view_id" ref="view_hr_income_tax_tree"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create Records Here.......
                </p>
            </field>
        </record>
        
     
        <menuitem id="hr_income_tax_menuitem"
                  name="Income Tax"
                  parent="hr_payroll.menu_hr_payroll_employees_root"
                  action="action_hr_income_tax"
                  sequence="19"/>
        
    </data>
</odoo>